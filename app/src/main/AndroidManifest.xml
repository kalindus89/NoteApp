<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.noteapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoteApp">
        <activity
            android:name=".note_activities.NoteShowDetails"
            android:exported="true"
            android:theme="@style/Theme.NoteAppNoActionBar" />
        <activity
            android:name=".note_activities.EditNoteActivity"
            android:exported="true"
            android:theme="@style/Theme.NoteAppNoActionBar" />
        <activity
            android:name=".note_activities.CreateNoteActivity"
            android:exported="true"
            android:theme="@style/Theme.NoteAppNoActionBar"/>
        <activity
            android:name=".note_activities.AllNotesActivity"
            android:exported="true" />
        <activity
            android:name=".login_signup.ForgotPassword"
            android:exported="true" />
        <activity
            android:name=".login_signup.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".login_signup.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>